# ===========================================
# BlackEyesArtisan Storefront Environment Variables
# ===========================================

# Medusa Backend
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_your_medusa_publishable_key
NEXT_PUBLIC_MEDUSA_BACKEND_URL=https://api.blackeyesartisan.shop

# Strapi CMS
NEXT_PUBLIC_STRAPI_URL=https://cms.blackeyesartisan.shop
NEXT_PUBLIC_STRAPI_READ_TOKEN=your_strapi_read_token
STRAPI_WEBHOOK_REVALIDATION_SECRET=your_webhook_secret

# Cloudinary (Image CDN)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=dllzefagw
# Legacy vars for Solace compatibility (point to Cloudinary)
NEXT_PUBLIC_CDN_SPACE_DOMAIN=res.cloudinary.com
NEXT_PUBLIC_SPACE_DOMAIN=res.cloudinary.com
NEXT_PUBLIC_SPACE_ENDPOINT=res.cloudinary.com

# Resend (Email)
RESEND_API_KEY=re_your_resend_api_key
RESEND_AUDIENCE_ID=your_audience_id

# Upstash Redis (Rate Limiting & Cache)
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Stripe (Payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_your_stripe_key

# Site Configuration
NEXT_PUBLIC_BASE_URL=https://www.blackeyesartisan.shop
NEXT_PUBLIC_DEMO_MODE=false

# Age Gate (optional - defaults from Strapi CMS)
# AGE_GATE_TTL_DAYS=30
